
.cropImage {

	&__editor {
		position relative
		overflow hidden
		margin-top 10px
		width 200px
		height 200px
		border 1px dotted green
		border-radius 50%

		&-select-image {

			cursor pointer
			text-align center
			font-size 14px
			position absolute
			bottom 0
			left 0
			width 100%
			background-color rgba(0,0,0,0.6)
			height 40px
			line-height 40px
			color #fff
			text-transform uppercase

		}

	}
}


.cursor-move {

	cursor move!important

}